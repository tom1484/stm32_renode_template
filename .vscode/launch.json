{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Cortex Debug Local",
            "preLaunchTask": "Run Renode Local",
            "postDebugTask": "Close Renode",
            "type": "cortex-debug",
            "request": "attach",
            "servertype": "external",
            "cwd": "${workspaceRoot}",
            "executable": "${command:cmake.launchTargetPath}",
            "gdbPath": "${config:STM32VSCodeExtension.cubeCLT.path}/GNU-tools-for-STM32/bin/arm-none-eabi-gdb",
            "gdbTarget": "localhost:3333",
            "device": "STM32F429ZITx",
            "runToEntryPoint": "main",
            "svdFile": "${config:STM32VSCodeExtension.cubeCLT.path}/STMicroelectronics_CMSIS_SVD/STM32F429.svd",
            "overrideResetCommands": [
                "monitor machine Reset"
            ]
        },
        {
            "name": "Cortex Debug Remote",
            "preLaunchTask": "Run Renode Remote",
            "postDebugTask": "Close Renode",
            "type": "cortex-debug",
            "request": "attach",
            "servertype": "external",
            "cwd": "${workspaceRoot}",
            "executable": "${command:cmake.launchTargetPath}",
            "gdbPath": "${config:STM32VSCodeExtension.cubeCLT.path}/GNU-tools-for-STM32/bin/arm-none-eabi-gdb",
            "gdbTarget": "${input:gdbTarget}",
            "device": "STM32F429ZITx",
            "runToEntryPoint": "main",
            "svdFile": "${config:STM32VSCodeExtension.cubeCLT.path}/STMicroelectronics_CMSIS_SVD/STM32F429.svd",
            "overrideResetCommands": [
                "monitor machine Reset"
            ]
        }
    ],
    "inputs": [
        {
            "id": "gdbTarget",
            "type": "promptString",
            "description": "GDB Target",
            "default": "churong.cc:3333"
        }
    ]
}
